<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("text_post_placeholder") %>
  </div>
  <%= f.submit t("post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: Settings.POST_PICTURE_ACCEPT %>
  </span>
<% end %>
