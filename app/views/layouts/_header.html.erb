<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("sun"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to t("home"), root_path %></li>
        <li class="nav-item"><%= link_to t("help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("list_users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to t("login"), login_path %></li>
        <% end %>
        <li><%= link_to t("english"), locale: "en" %><li>
        <li><%= link_to t("vietnam"), locale: "vi" %></li>
      </ul>
    </nav>
  </div>
</header>
